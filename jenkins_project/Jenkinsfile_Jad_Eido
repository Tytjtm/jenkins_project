pipeline {
    agent any

    environment {
        // Name of the virtual environment folder (inside jenkins_project)
        VENV   = 'venv'
        // Absolute path to your Python executable (adjust if different)
        PY_EXE = 'C:\\Users\\k\\AppData\\Local\\Programs\\Python\\Python313\\python.exe'
    }

    stages {

        stage('Setup') {
            steps {
                dir('jenkins_project') {
                    script {
                        // 1) Create virtual environment if it doesnâ€™t exist
                        if (!fileExists("${VENV}\\Scripts\\activate.bat")) {
                            bat """
                            "%PY_EXE%" -m venv %VENV%
                            """
                        }

                        // 2) Activate venv and install dependencies into the venv
                        bat """
                        call %VENV%\\Scripts\\activate.bat
                        python -m pip install --upgrade pip
                        python -m pip install -r requirements.txt
                        """
                    }
                }
            }
        }

        stage('Lint') {
            steps {
                dir('jenkins_project') {
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    flake8 app.py
                    """
                }
            }
        }

        stage('Test') {
            steps {
                dir('jenkins_project') {
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    pytest
                    """
                }
            }
        }

        stage('Coverage') {
            steps {
                dir('jenkins_project') {
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    coverage run -m pytest
                    coverage report
                    """
                }
            }
        }

        stage('Security Scan') {
            steps {
                dir('jenkins_project') {
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    bandit -r .
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('jenkins_project') {
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    python app.py
                    """
                }
            }
        }
    }

    post {
        always {
            // Clean workspace after each run
            cleanWs()
        }
    }
}
