pipeline {
    agent any

    environment {
        VENV = 'venv'
    }

    stages {

        stage('Setup') {
            steps {
                script {
                    // Create virtual environment if it doesnâ€™t exist
                    if (!fileExists("${env.WORKSPACE}\\${VENV}\\Scripts\\activate.bat")) {
                        bat """
                        python -m venv %VENV%
                        """
                    }

                    // Activate venv and install requirements
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                bat """
                call %VENV%\\Scripts\\activate.bat
                flake8 app.py
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                call %VENV%\\Scripts\\activate.bat
                pytest
                """
            }
        }

        stage('Deploy') {
            steps {
                bat """
                call %VENV%\\Scripts\\activate.bat
                python app.py
                """
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
