pipeline {
    agent any

    environment {
        VENV   = 'venv'
        PY_EXE = 'C:\\Users\\k\\AppData\\Local\\Programs\\Python\\Python313\\python.exe'
    }

    stages {

        stage('Setup') {
            steps {
                dir('jenkins_project') {
                    script {
                        // 1) Create virtual environment if it doesnâ€™t exist yet
                        if (!fileExists("${VENV}\\Scripts\\activate.bat")) {
                            bat """
                            "%PY_EXE%" -m venv %VENV%
                            """
                        }

                        // 2) Use the VENV's Python + pip to install requirements
                        bat """
                        call %VENV%\\Scripts\\activate.bat
                        python -m pip install --upgrade pip
                        python -m pip install -r requirements.txt
                        """
                    }
                }
            }
        }

        stage('Lint') {
            steps {
                dir('jenkins_project') {
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    flake8 app.py
                    """
                }
            }
        }

        stage('Test') {
            steps {
                dir('jenkins_project') {
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    pytest
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('jenkins_project') {
                    bat """
                    call %VENV%\\Scripts\\activate.bat
                    python app.py
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
